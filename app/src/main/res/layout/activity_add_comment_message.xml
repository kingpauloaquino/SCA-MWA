<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_comment_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_worker"
    tools:context="com.cheappartsguy.app.cpg.AddCommentMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/title_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD A COMMENT"
            android:padding="20dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/faded_line"
            android:layout_marginTop="-7dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            >

            <TableRow android:layout_width="0dp" android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:background="#7e8c8d"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back_icon"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        />

                    <TextView
                        android:id="@+id/txtBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BACK TO OPTION"
                        android:textColor="#ffffff"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnClear"
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:background="#f39c11"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clear_comment_box"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CLEAR COMMENT"
                        android:textColor="#ffffff"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:background="#27ae61">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/save_icon"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAVE COMMENT"
                        android:textColor="#ffffff"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        />

                </LinearLayout>

            </TableRow>

        </TableLayout>

        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#cccccc"
            android:gravity="center_horizontal"
            android:hint="Tap Here to Enter Comment and/or Part numbers for this Unit. When done, press Save Comment Button"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="10dp"
            android:lines="5"
            android:maxLines="1"
            android:padding="20dp"
            android:textColor="#1c1c1c"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center"
            android:background="#1c1f28"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="MW-109"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:gravity="right"
                android:id="@+id/txtScreenId" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
