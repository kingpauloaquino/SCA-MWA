<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_grade_option_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_worker"
    tools:context="com.cheappartsguy.app.cpg.GradeOptionViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOW FULL IS THIS UNIT?"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="40dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/faded_line"
            android:layout_marginTop="10dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:stretchColumns="*"
            >

            <TableRow android:layout_width="0dp" android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/gradeBtnEmpty"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="EMPTY"
                    android:padding="20dp"
                    android:textSize="22sp"
                    android:background="@drawable/empty_shape"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:drawableTop="@drawable/empty_icon"
                    android:layout_marginRight="20dp"
                    />

                <Button
                    android:id="@+id/gradeBtnUnknown"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="UNKNOWN"
                    android:padding="20dp"
                    android:textSize="22sp"
                    android:background="@drawable/unknown_shape"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:drawableTop="@drawable/unknown_icon"
                    android:layout_marginRight="20dp"
                    />

                <Button
                    android:id="@+id/gradeBtnOneFourth"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="1/4"
                    android:padding="20dp"
                    android:textSize="22sp"
                    android:background="@drawable/one4_shape"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:drawableTop="@drawable/one_fourth"
                    />

            </TableRow>

            <TableRow android:layout_width="0dp">

                <Button
                    android:id="@+id/gradeBtnOneHalf"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/one2_shape"
                    android:drawableTop="@drawable/one_half_icon"
                    android:padding="20dp"
                    android:text="1/2"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/gradeBtnThreeFourth"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="3/4"
                    android:padding="20dp"
                    android:textSize="22sp"
                    android:background="@drawable/three4_shape"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:drawableTop="@drawable/three_fourt_icon"
                    android:layout_marginRight="20dp"
                    />

                <Button
                    android:id="@+id/gradeBtnFull"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/one5_shape"
                    android:drawableTop="@drawable/full_icon"
                    android:padding="20dp"
                    android:text="FULL"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginTop="40dp"
            >

            <TableRow android:layout_width="0dp" android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/btnBackViewFullGradeImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#7e8c8d"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/back_to_dashboard" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#ffffff"
                        android:textSize="21dp"
                        android:text="GO BACK AND VIEW IMAGE" />

                </LinearLayout>

            </TableRow>

        </TableLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:background="#1c1f28"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="MW-114"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:gravity="right"
            android:id="@+id/textView3" />
    </LinearLayout>

</RelativeLayout>
