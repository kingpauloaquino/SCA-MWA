<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_worker"
    tools:context="com.cheappartsguy.app.cpg.ToolOptionCATPALActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/faded_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLEASE CHOOSE AN ACTION"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/faded_line"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            >

            <TableRow android:layout_width="0dp"  android:layout_marginBottom="10dp"  >

                <LinearLayout
                    android:id="@+id/btnViewBoxInformation"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:padding="5px"
                    android:layout_marginRight="10dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/view_box_information" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-medium"
                        android:text="View Box Information" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAddUnit"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/add_units_to_a_box" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="Add Units to a Box that has \na QR Label"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />
                </LinearLayout>

            </TableRow>

            <TableRow android:layout_width="0dp"  android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/btnViewUnit"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/view_photos_of_units" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:text="View Photos of Units in a Box" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnClose"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/close_a_box" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:text="Close a Box" />
                </LinearLayout>

            </TableRow>

            <TableRow android:layout_width="0dp" android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/btnCreateBox"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/create_new_box" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:text="Perform Box Audit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/transfer_units_to_a_box" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:text="Transfer All Units from One \nBox to Another Box" />
                </LinearLayout>

            </TableRow>

            <TableRow android:layout_width="0dp" android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/btnPrintLabel"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/print_box_label" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:text="Print a Box Label/Create a\nNew Box" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnCommentOnBox"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/comment_on_a_box" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:text="View/Add Comment on a Box" />
                </LinearLayout>

            </TableRow>

            <TableRow android:layout_width="0dp">

                <LinearLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:text="Log-Out" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSync"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:background="@drawable/border1"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/sync_photos_and_comments" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="#ffffff"
                        android:text="Synch Unit/Photos Information" />
                </LinearLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MW-03"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:fontFamily="sans-serif-medium"
            />


    </LinearLayout>

</RelativeLayout>
