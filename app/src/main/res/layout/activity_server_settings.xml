<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_worker"
    tools:context="com.cheappartsguy.app.cpg.ServerSettingsActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#ffffff"
                    android:textSize="21dp"
                    android:background="#27ae61"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Cancel"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#ffffff"
                    android:textSize="21dp"
                    android:background="#7f8c8d"

                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server API URL:"
                android:textSize="21dp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/txtAPIUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Server API URL Here..."
                android:gravity="left"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#1c1c1c"
                android:background="#cccccc"
                android:padding="10dp"
                android:scrollbars = "vertical"
                android:lineSpacingExtra="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Images URL:"
                android:textSize="21dp"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/txtImagesUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Images URL Here..."
                android:gravity="left"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#1c1c1c"
                android:background="#cccccc"
                android:padding="10dp"
                android:scrollbars = "vertical"
                android:lineSpacingExtra="10dp"
                />



        </LinearLayout>

    </ScrollView>






</android.support.constraint.ConstraintLayout>
