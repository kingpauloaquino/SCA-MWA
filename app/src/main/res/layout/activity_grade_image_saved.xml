<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_grade_image_saved"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_worker"
    tools:context="com.cheappartsguy.app.cpg.GradeImageSavedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRMATION PHOTO AND FULLNESS GRADE HAS BEEND SAVED"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="50dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/faded_line"
            android:layout_marginTop="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Select Your Next Action"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            >

            <TableRow android:layout_width="0dp">

                <LinearLayout
                    android:id="@+id/btnFinished"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#7e8c8d"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:layout_marginRight="15dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back_to_dashboard"
                        android:layout_gravity="center"
                        android:layout_marginTop="31dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FINISHED\nBACK TO DASHBOARD"
                        android:textColor="#ffffff"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAddAdditionalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#3798dc"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_info"
                        android:layout_gravity="center"
                        android:layout_marginTop="22dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD ADDITIONAL\nINFORMATION"
                        android:textColor="#ffffff"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_marginTop="365dp"
        >

        <LinearLayout
            android:id="@+id/btnAddAnotherUnit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="#2ecd71"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_another_unit"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD ANOTHER UNIT TO THIS BOX"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:background="#1c1f28"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="MW-108"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:gravity="right"
            android:id="@+id/txtPage" />
    </LinearLayout>

</RelativeLayout>
